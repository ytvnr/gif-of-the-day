{
    "name": "front",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve --port 1337",
        "build:local": "vue-cli-service build",
        "build": "NODE_ENV=production vue-cli-service build",
        "lint": "vue-cli-service lint",
        "start": "npm run serve",
        "ui": "vue ui --dev"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "core-js": "^3.6.5",
        "firebase": "^7.17.2",
        "lodash.debounce": "^4.0.8",
        "masonry-layout": "^4.2.2",
        "serialize-javascript": "^2.1.1",
        "vue": "^2.6.11",
        "vue-router": "^3.4.3",
        "vuefire": "^2.2.4",
        "vuelidate": "^0.7.5",
        "vuetify": "^2.3.8",
        "vuex": "^3.5.1",
        "vuex-persistedstate": "^2.7.1"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^4.5.3",
        "@vue/cli-plugin-eslint": "^4.5.3",
        "@vue/cli-plugin-pwa": "^4.5.3",
        "@vue/cli-plugin-router": "^4.5.3",
        "@vue/cli-service": "^4.5.3",
        "babel-eslint": "^10.1.0",
        "eslint": "^5.16.0",
        "eslint-plugin-vue": "^5.0.0",
        "node-sass": "^4.14.1",
        "prettier": "2.0.2",
        "sass": "^1.26.10",
        "sass-loader": "^8.0.2",
        "serialize-javascript": "^2.1.1",
        "vue-cli-plugin-vuetify": "^2.0.7",
        "vue-template-compiler": "^2.6.11",
        "vuetify-loader": "^1.6.0"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {
            "no-console": 0
        },
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "overrides": [
            {
                "files": [
                    "*.vue"
                ],
                "rules": {
                    "indent": 2
                }
            }
        ]
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ]
}
